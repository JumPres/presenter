{
    "name": "jumpres",
    "description": "Real-time message board suite",
    "author": "jumpres",
    "version": "0.1.0",
    "scripts": {
        "start": "electron .",
        "start-server": "electron . --disable-viewer",
        "windows:build": "electron-builder --win",
        "mac:build": "electron-builder --mac",
        "linux:build": "electron-builder --linux",
        "linux:build-unpacked": "electron-builder --linux --dir",
        "linux:build-appimage": "electron-builder --linux appimage"
    },
    "dependencies": {
        "@wll8/express-ws": "^1.0.6",
        "express": "^5.2.1"
    },
    "devDependencies": {
        "electron": "39.2.7",
        "electron-builder": "26.4.0"
    },
    "license": "GPL-v2-only",
    "build": {
        "appId": "com.JumPres.presenter",
        "productName": "JumPres",
        "artifactName": "JumPres-${arch}.${ext}",
        "linux": {
            "icon": "./assets/icon.svg",
            "synopsis": "Run a custom message board",
            "category": "Productivity",
            "desktop": {
                "entry": {
                    "Name": "JumPres",
                    "Type": "Application",
                    "Categories": "Productivity;",
                    "Keywords": ""
                }
            },
            "maintainer": "support@jumpr.es",
            "target": [
                {
                    "target": "deb",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "tar.gz",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "AppImage",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "./assets/icon.ico",
            "artifactName": "JumPres-${arch}-Portable.zip",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "nsis": {
            "artifactName": "JumPres-Setup.${ext}",
            "uninstallDisplayName": "JumPres",
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "perMachine": false
        },
        "mac": {
            "icon": "./assets/icon.icns",
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "universal"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github",
            "owner": "jumpres",
            "repo": "presenter"
        }
    }
}
